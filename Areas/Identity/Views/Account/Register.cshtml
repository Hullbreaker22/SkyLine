@model SkyLine.ViewModels.UserRegister
@{
    ViewData["Title"] = "Register";
}

<div class="register-wrapper d-flex justify-content-center align-items-center py-5">
    <div class="register-card shadow-lg p-5 rounded-4">
        <h2 class="text-center mb-4 fw-bold text-light">Create Your Account ✈️</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Full Name"/>
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" placeholder="Username" />
                <label asp-for="UserName"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Street" class="form-control" placeholder="Street" />
                <label asp-for="Street"></label>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <input asp-for="City" class="form-control" placeholder="City" />
                </div>
                <div class="col-md-4 mb-3">
                    <input asp-for="State" class="form-control" placeholder="State" />
                </div>
                <div class="col-md-4 mb-3">
                    <input asp-for="ZipCode" class="form-control" placeholder="Zip Code" />
                </div>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-register">Register Now</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <small class="text-light">
                Already have an account?
                <a asp-action="Login" class="text-info">Login</a>
            </small>
        </div>
    </div>
</div>

<!-- CSS inside the same file -->
<style>
    .register-wrapper {
        background: linear-gradient(135deg, #001f3f, #004080, #000000);
        min-height: calc(100vh - 200px);
    }

    .register-card {
        background: rgba(0, 20, 40, 0.95);
        border: 1px solid rgba(0, 150, 255, 0.3);
        color: #fff;
        max-width: 500px;
        width: 100%;
        backdrop-filter: blur(10px);
        border-radius: 20px;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.08);
        border: none;
        color: #e0f7ff; /* Bright text color when typing */
        border-radius: 10px;
        height: 50px;
        transition: 0.3s;
    }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5); /* Dim placeholder */
        }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.15);
            box-shadow: 0 0 10px #00aaff;
            color: #ffffff; /* ensure focused input stays bright white */
        }

    .btn-register {
        background: linear-gradient(90deg, #0077b6, #00b4d8);
        color: #fff;
        font-weight: 600;
        border-radius: 30px;
        padding: 12px;
        transition: all 0.3s ease;
        border: none;
    }

        .btn-register:hover {
            background: linear-gradient(90deg, #00b4d8, #0077b6);
            transform: scale(1.03);
            box-shadow: 0 0 15px #00aaff;
        }

    label {
        color: #9cc3ff;
    }

    .text-info {
        color: #00b4d8 !important;
    }

    .text-danger {
        font-size: 13px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
