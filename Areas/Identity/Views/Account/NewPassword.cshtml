@model SkyLine.ViewModels.NewPass
@{
    ViewData["Title"] = "Create New Password";
}

<div class="newpass-wrapper d-flex justify-content-center align-items-center py-5">
    <div class="newpass-card shadow-lg p-5 rounded-4">
        <h2 class="text-center mb-4 fw-bold text-light">Create a New Password 🔑</h2>
        <p class="text-center text-light-50 mb-4">
            Please enter your new password below and confirm it to complete the reset process.
        </p>

        <form asp-area="Identity" asp-controller="Account" asp-action="NewPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Hidden User ID -->
            <input asp-for="ApplicationUserId" type="hidden" />

            <!-- New Password -->
            <div class="form-floating mb-4">
                <input asp-for="Password" class="form-control" placeholder="New Password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-4">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid gap-3 mt-4">
                <button type="submit" class="btn btn-primary-glow">Confirm New Password</button>
                <a asp-area="Identity" asp-controller="Account" asp-action="Login" class="btn btn-outline-light">Cancel</a>
            </div>
        </form>
    </div>
</div>

<!-- Style -->
<style>
    .newpass-wrapper {
        background: linear-gradient(135deg, #001f3f, #004080, #000000);
        min-height: calc(100vh - 200px);
    }

    .newpass-card {
        background: rgba(0, 20, 40, 0.95);
        border: 1px solid rgba(0, 150, 255, 0.3);
        color: #fff;
        max-width: 480px;
        width: 100%;
        backdrop-filter: blur(10px);
        border-radius: 20px;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.08);
        border: none;
        color: #e0f7ff;
        border-radius: 10px;
        height: 50px;
        transition: 0.3s;
    }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.15);
            box-shadow: 0 0 10px #00aaff;
            color: #ffffff;
        }

    label {
        color: #9cc3ff;
    }

    .btn-primary-glow {
        background: linear-gradient(90deg, #0077b6, #00b4d8);
        color: #fff;
        font-weight: 600;
        border-radius: 30px;
        padding: 12px;
        transition: all 0.3s ease;
        border: none;
    }

        .btn-primary-glow:hover {
            background: linear-gradient(90deg, #00b4d8, #0077b6);
            transform: scale(1.03);
            box-shadow: 0 0 15px #00aaff;
        }

    .btn-outline-light {
        border: 1px solid #9cc3ff;
        color: #9cc3ff;
        font-weight: 600;
        border-radius: 30px;
        padding: 12px;
        transition: 0.3s;
        background: transparent;
    }

        .btn-outline-light:hover {
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 0 10px #00b4d8;
            color: #fff;
        }

    .text-light-50 {
        color: rgba(255, 255, 255, 0.6);
    }

    .text-danger {
        font-size: 13px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
